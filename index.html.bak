<script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
<script>
  const carouselEl = document.querySelector('[data-carousel]');
  const flkty = new Flickity(carouselEl, {
    wrapAround:true, setGallerySize:false, prevNextButtons:true, pageDots:true,
    draggable:'>1', selectedAttraction:0.02, friction:0.35
  });

  const btns = Array.from(document.querySelectorAll('.nav-btn'));
  function setActive(i){ btns.forEach((b,idx)=> b.classList.toggle('is-active', idx===i)); }
  btns.forEach((b,i)=> b.addEventListener('click', ()=> flkty.select(i)));
  flkty.on('select', ()=> setActive(flkty.selectedIndex));
  setActive(0);

  // Навигация колесом (desktop)
  (function(){
    if (window.matchMedia('(max-width:520px)').matches) return;
    let last=0, cooldown=650;
    window.addEventListener('wheel',(e)=>{
      const now=Date.now(); if(now-last<cooldown) return;
      const d=e.deltaY||e.wheelDelta||-e.detail; if(Math.abs(d)<10) return;
      e.preventDefault(); d>0?flkty.next():flkty.previous(); last=now;
    },{passive:false});
  })();
</script>
